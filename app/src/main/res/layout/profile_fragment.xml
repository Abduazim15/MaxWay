<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6FA"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp"
        android:orientation="horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Abduazim Abduqahhorov"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:id="@+id/name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998 94 130 22 28"
        android:fontFamily="@font/sf_pro_display"
        android:textColor="#818C99"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:id="@+id/update"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/name" />
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_marginTop="22dp"
        android:id="@+id/filials"
        android:paddingHorizontal="12dp"
        android:background="@drawable/white_square"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_height="64dp">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/loc"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filiallar"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sf_pro_display"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/filials"
        android:layout_marginTop="12dp"
        android:id="@+id/settings"
        android:paddingHorizontal="12dp"
        android:background="@drawable/white_square"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_height="64dp">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/set"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sozlamalar"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sf_pro_display"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:id="@+id/about"
        android:background="@drawable/white_square"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_height="64dp">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/info"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xizmat haqida"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sf_pro_display"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display"
        android:text="Versiya 2.0.9 (38)"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>